<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/comment_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/rate_linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_imageView"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/star0_imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:clickable="true"
                card_view:srcCompat="@drawable/star_selector" />

            <ImageView
                android:id="@+id/star1_imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:clickable="true"
                card_view:srcCompat="@drawable/star_selector" />

            <ImageView
                android:id="@+id/star2_imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:clickable="true"
                card_view:srcCompat="@drawable/star_selector" />

            <ImageView
                android:id="@+id/star3_imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:clickable="true"
                card_view:srcCompat="@drawable/star_selector" />

            <ImageView
                android:id="@+id/star4_imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:clickable="true"
                card_view:srcCompat="@drawable/star_selector" />

        </LinearLayout>

        <EditText
            android:id="@+id/comment_editText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/rate_linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_border_color"
            android:ems="10"
            android:gravity="top|left"
            android:hint="寫下你的想法..."
            android:inputType="textPersonName"
            android:padding="3dp"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/send_imageView"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_below="@+id/comment_editText"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/send_icon" />

    </RelativeLayout>

</android.support.v7.widget.CardView>